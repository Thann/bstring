{
  "name": "bstr",
  "version": "0.0.0",
  "description": "String utilities and encodings for javascript",
  "keywords": [
    "string",
    "base58",
    "bech32"
  ],
  "license": "MIT",
  "repository": "git://github.com/bcoin-org/bstr.git",
  "homepage": "https://github.com/bcoin-org/bstr",
  "bugs": {
    "url": "https://github.com/bcoin-org/bstr/issues"
  },
  "author": "Christopher Jeffrey <chjjeffrey@gmail.com>",
  "main": "./lib/bstr.js",
  "scripts": {
    "install": "node-gyp rebuild || echo 'Build failed.'",
    "browserify": "browserify -s bstr lib/bstr.js | uglifyjs -c > bstr.js",
    "clean": "rm -f bstr.js",
    "lint": "eslint lib/ test/ || exit 0",
    "test": "mocha --reporter spec test/*-test.js",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "bbuf": "^0.0.1",
    "bindings": "^1.3.0",
    "nan": "^2.7.0"
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browserify": "^14.5.0",
    "eslint": "^4.9.0",
    "mocha": "^4.0.1",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.3",
    "uglify-es": "^3.1.3",
    "webpack": "^3.8.1"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "gypfile": true,
  "browser": {
    "./lib/base58": "./lib/base58-browser.js",
    "./lib/bech32": "./lib/bech32-browser.js"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
